{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "allowJs": true,
        "checkJs": true,
        "jsxFragmentFactory": "Fragment",
        "lib": ["ESNext", "DOM"]
    },
    "exclude": ["**/lib/*", "commitlint.config.cjs", "cz.config.cjs"]
}
